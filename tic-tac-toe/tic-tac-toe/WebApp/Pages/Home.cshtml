@page
@using Microsoft.EntityFrameworkCore.Metadata.Internal
@model WebApp.Pages.Home

<h1>New Game</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ConfigurationName" class="control-label">Choose configuration</label>
                <select asp-for="ConfigurationName" class="form-select"
                        asp-items="Model.ConfigSelectList"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>