@page
@model WebApp.Pages.JoinGame

<div class="text-center">
    <h1>Join game</h1>
</div>

@if (!string.IsNullOrWhiteSpace(Model.Error))
{
    <div class="alert alert-danger" role="alert">
        @Model.Error
    </div>
}

<div class="row">
    <div class="col-md-4">
    </div>
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="GameId" class="control-label">Choose game</label>
                <select asp-for="GameId" class="form-select"
                        asp-items="Model.MissingPlayerGameSelectList"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Join" class="btn btn-success"/>
            </div>
        </form>
    </div>
</div>